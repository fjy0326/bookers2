<h1>Books</h1>
<table class="table">
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
   <% @books.each do |book| %>
  <tr>
    <th><a href="<%= user_path(book.user) %>"><%= image_tag(book.user.profile_image, size: '100x100') %></a></th>
    <th><%= link_to book.title, book_path(book.id) %></th>
    <th><%= book.body %></th>
  </tr>
<% end %>
  </tr>
 </thead>
</table>
