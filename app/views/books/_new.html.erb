<h1 class="mt-3">New book</h1>
<%= form_with model: Book.new do |f| %>
  <div class="form-group">
    <label for="inputTitle">Title</label><br>
    <%= f.text_field :title, autofocus: true, id:"inputTitle"%>
  </div>
  <div class="form-group">
    <label for="inputOpinion">Opinion</label><br>
    <%= f.text_area :body, autofocus: true, id:"inputOpinion"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-success" %>
  </div>
<% end %>
