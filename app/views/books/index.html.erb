 <%if @book.present? && @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <%= render 'users/info', users: @users %>
      <%= render 'books/new', books: @books %>
  </div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.profile_image, size: '100x100' %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
<% end %>
  </tr>
  </tbody>
</table>

</div>
